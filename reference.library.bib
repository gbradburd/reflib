@Article{Wasser2004b,
  author   = {Wasser, Samuel K and Shedlock, Andrew M and Comstock, Kenine and Ostrander, Elaine and Mutayoba, Benezeth and Stephens, Matthew},
  title    = {Assigning {African} elephant {DNA} to geographic region of origin: {Applications} to the ivory trade.},
