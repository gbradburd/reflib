  keywords = {data_summary gene_flow isolation_by_distance isolation_by_environment review},
  OPTpages = {n/a--n/a},
  timestamp = {2013-11-01T13:44:59.000+0100},
  title = {Genetic isolation by environment or distance: Which pattern of gene flow is most common?},
  OPTurl = {http://dx.doi.org/10.1111/evo.12258},
  year = 2013
}

@article{charlesworth2003effects,
