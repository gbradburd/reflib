@article{Atzmon2010,
title = "Abraham's Children in the Genome Era: Major Jewish Diaspora Populations Comprise Distinct Genetic Clusters with Shared Middle Eastern Ancestry ",
journal = "The American Journal of Human Genetics ",
volume = "86",
number = "6",
