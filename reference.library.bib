}

@article {Oziolor,
	author = {Oziolor, Elias M. and Reid, Noah M. and Yair, Sivan and Lee, Kristin M. and Guberman VerPloeg, Sarah and Bruns, Peter C. and Shaw, Joseph R. and Whitehead, Andrew and Matson, Cole W.},
	title = {Adaptive introgression enables evolutionary rescue from extreme environmental pollution},
