}

@article {Berg_2018,
article_type = {journal},
title = {Polygenic adaptation on height is overestimated due to uncorrected stratification in genome-wide association studies},
author = {Sohail, Mashaal and Maier, Robert M and Ganna, Andrea and Bloemendal, Alex and Martin, Alicia R and Turchin, Michael C and Chiang, Charleston WK and Hirschhorn, Joel and Daly, Mark J and Patterson, Nick and Neale, Benjamin and Mathieson, Iain and Reich, David and Sunyaev, Shamil R},
