  interhash = {548a52ddedb1e76c73b6b9c2f46308f2},
  intrahash = {bb9e19ebcbc14ef01c2f345b1c57e43e},
  issn = {09609822},
  journal = {Current Biology},
  privnote = {doi: 10.1016/j.cub.2016.06.034},
  publisher = {Elsevier},
  title = {Plumage Genes and Little Else Distinguish the Genomes of Hybridizing Warblers},
